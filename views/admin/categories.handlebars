
<h2>Categories List:</h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success">New Category</button></a>

{{#each categories}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{name}}</h4>
        <small>Slug: {{slug}}</small>
        <br>
        <small>Creation Date: {{date}}</small>
        <br>
        <a href="/admin/categories/edit/{{id}}"><button class="btn btn-success mt-4">Edit Category</button></a>
        <form action="/admin/categories/delete" method="POST">
            <input type="hidden" name="id" id="id" value="{{id}}">
            <button type="submit" class="btn btn-danger mt-2">Delete Category</button>
        </form>
    </div>
</div>
{{else}}
<h4 class="mt-3">No categories registered</h4>
{{/each}}