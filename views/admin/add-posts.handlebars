{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<h3>New Post:</h3>
<div class="card">
    <div class="card-body">
<form action="/admin/posts/new" method="POST">
    <label for="title">Title: </label>
    <input type="text" id="title" name="title" placeholder="Post Title" class="form-control">
    <label for="slug">Slug: </label>
    <input type="text" id="slug" name="slug" placeholder="Post Slug" class="form-control">
    <label for="description">Description: </label>
    <input type="text" id="description" name="description" placeholder="Post Description" class="form-control">
    <label for="content">Content: </label>
    <textarea name="content" id="content" cols="30" rows="10" class="form-control" placeholder="Post Content"></textarea>
    <label for="category">Category: </label>
    <select name="category" id="category" class="form-control">
    {{#each categories}}
    <option value="{{_id}}">{{name}}</option>
    {{else}}
    <option value="0">No categories registered</option>
    {{/each}}
    </select>
    <br>
    <button type="submit" class="btn btn-success">Create Post</button>
</form>
</div>  
</div>